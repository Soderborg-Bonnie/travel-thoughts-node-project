<body id='newThoughtsPage'>
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        Save your thoughts here
      </h1>
      <% include ./partials/messages %>
      <form action="/info/saveForm" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter name of place/activity/etc."
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="date">Date</label>
          <input
            type="date"
            id="date"
            name="date"
            class="form-control"
            placeholder="Enter date"
            value="<%= typeof date != 'undefined' ? date : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <input
            type="description"
            id="description"
            name="description"
            class="form-control"
            placeholder="Description"
            value="<%= typeof description != 'undefined' ? description : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="myThoughts">Thoughts</label>
          <input
            type="myThoughts"
            id="myThoughts"
            name="myThoughts"
            class="form-control"
            placeholder="Thoughts"
            value="<%= typeof myThoughts != 'undefined' ? myThoughts : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="locationGPS">GPS location</label>
          <input
            type="locationGPS"
            id="locationGPS"
            name="locationGPS"
            class="form-control"
            placeholder="x-coordinate y-coordinate"
            value="<%= typeof locationGPS != 'undefined' ? locationGPS : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="locationCity">City</label>
          <input
            type="locationCity"
            id="locationCity"
            name="locationCity"
            class="form-control"
            placeholder="City"
            value="<%= typeof locationCity != 'undefined' ? locationCity : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="locationState">State</label>
          <input
            type="locationState"
            id="locationState"
            name="locationState"
            class="form-control"
            placeholder="State"
            value="<%= typeof locationState != 'undefined' ? locationState : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="locationCountry">Country</label>
          <input
            type="locationCountry"
            id="locationCountry"
            name="locationCountry"
            class="form-control"
            placeholder="Country"
            value="<%= typeof locationCountry != 'undefined' ? locationCountry : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="pass">Pass</label>
          <input
            type="pass"
            id="pass"
            name="pass"
            class="form-control"
            placeholder="Type of pass required"
            value="<%= typeof pass != 'undefined' ? pass : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="cost">Cost</label>
          <input
            type="cost"
            id="cost"
            name="cost"
            class="form-control"
            placeholder="Cost"
            value="<%= typeof cost != 'undefined' ? cost : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="rating">Rating</label>
          <input
            type="rating"
            id="rating"
            name="rating"
            class="form-control"
            placeholder="Rating 1-10"
            value="<%= typeof rating != 'undefined' ? rating : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Save those thoughts!
        </button>
      </form>
    </div>
  </div>
</div>
</body>